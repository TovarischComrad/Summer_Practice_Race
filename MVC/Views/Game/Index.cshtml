@model Entity.SearchOut.SearchOutGame
@{
    ViewData["Title"] = "List of games";
}
<head>
    <link rel="stylesheet" href="~/css/main.css" type="text/css">
</head>
<body>
    <h1>AVAILABLE GAMES</h1>
    <table>
        <tr>
            <th width="244px">ID</th>
            <th width="255px">HOST</th>
            <th width="310px">PLAYERS</th>
            <th width="300px">ACTION</th>
        </tr>
        @foreach(var game in Model.Games)
        {
            <tr>
                <td class="left">@game.Id</td>
                <td class="center">@game.HostName</td>
                <td class="center">@game.PlayersCount</td>
                <td class="right">
                    <a asp-area="" asp-controller="Game" asp-action="Join" asp-route-gameId="@game.Id">Join</a>
                </td>
            </tr>
        }
    </table>
</body>
